{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "rootDirs": [
      "./src/bin",
      "./src/lib"
    ],
    "lib": [
      "es2015",
      "es2015.promise",
      "es2017",
      "dom",
      "es2017.object"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "compileOnSave": true
}
